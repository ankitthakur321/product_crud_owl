<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_crud_owl_product_template_form_view" model="ir.ui.view">
        <field name="name">product.crud.owl.product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <page name="sales" position="inside">
                <group string="Product Description">
                    <field name="product_description" colspan="2" nolabel="1" placeholder="This is the product description."/>
                </group>
            </page>
        </field>
    </record>

</odoo>
